# LynxKite for a single machine with Let's Encrypt SSL setup.
# The domain name is assumed to be $KITE_INSTANCE.lynxanalytics.com.
FROM lynx/kite_local-authenticated

ENV KITE_INSTANCE=
ENV KITE_TITLE=
ENV KITE_TAGLINE=
ENV KITE_FRONTEND_CONFIG=
ENV KITE_GOOGLE_CLIENT_SECRET=
ENV KITE_GOOGLE_CLIENT_ID=
ENV KITE_GOOGLE_HOSTED_DOMAIN=
ENV KITE_GOOGLE_REQUIRED_SUFFIX=
ENV KITE_GOOGLE_PUBLIC_ACCESS=
ENV KITE_GOOGLE_WIZARD_ONLY=
ENV KITE_HOSTNAME=
ENV KITE_DISABLE_SPHYNX=
ENV KITE_ALLOW_PYTHON=
ENV SPHYNX_CHROOT_PYTHON=

COPY run.sh /run.sh

EXPOSE 2201
