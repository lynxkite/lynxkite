<div class="graph-sidebar" ng-class="{ active: sidebarOpen }">
  <div class="inside">
    <copy-box description="Copy&nbsp;graph&nbsp;data to&nbsp;clipboard" data="{{tsv}}"></copy-box>
    <div class="filters">
      <div><label><input type="checkbox" ng-model="filters.inverted"> inverted</label></div>
      <div>
        <i drop-tooltip="Brightness" drop-tooltip-position="left middle" class="glyphicon glyphicon-certificate"></i>
        <input type="range" max="200" step="1" ng-model="filters.brightness">
      </div>
      <div>
        <i drop-tooltip="Contrast" drop-tooltip-position="left middle" class="glyphicon glyphicon-adjust"></i>
        <input type="range" max="200" step="1" ng-model="filters.contrast">
      </div>
      <div>
        <i drop-tooltip="Saturation" drop-tooltip-position="left middle" class="glyphicon glyphicon-tint"></i>
        <input type="range" max="200" step="1" ng-model="filters.saturation">
      </div>
    </div>
    <div class="filters" ng-show="mapViewEnabled()">
      Map colors
      <div>
        <i drop-tooltip="Map Brightness" drop-tooltip-position="left middle" class="glyphicon glyphicon-certificate"></i>
        <input type="range" min="-100" max="100" step="1" ng-model="mapFilters.brightness">
      </div>
      <div>
        <i drop-tooltip="Map Gamma" drop-tooltip-position="left middle" class="glyphicon glyphicon-adjust"></i>
        <input type="range" min="-100" max="100" step="1" ng-model="mapFilters.gamma">
      </div>
      <div>
        <i drop-tooltip="Map Saturation" drop-tooltip-position="left middle" class="glyphicon glyphicon-tint"></i>
        <input type="range" min="-100" max="100" step="1" ng-model="mapFilters.saturation">
      </div>
    </div>
    <div><button ng-click="resetFilters()" class="btn btn-default btn-xs">Reset</button></div>
  </div>
  <div class="handle" ng-click="sidebarOpen = !sidebarOpen">
  </div>
</div>
