<div>
  <span class="tag-list-tag" ng-repeat="tag in tags"
    ng-click="removeTag(tag.id)" drop-tooltip="Click to remove"
    ng-class="{ 'unknown-tag': tag.unknown }">
    {{tag.title}}
  </span>
  <!-- Placeholder when no tags are set. -->
  <span class="tag-list-tag disabled" ng-show="tags.length === 0">none</span>

  <div class="btn-group" uib-dropdown>
    <a href class="btn-dropdown" uib-dropdown-toggle>
      <i class="glyphicon glyphicon-plus"></i>
    </a>
    <ul class="dropdown-menu">
      <li ng-repeat="option in options">
        <a href id="{{ option.id }}" ng-click="addTag(option.id)">
          {{option.title}}
        </a>
      </li>
    </ul>
  </div>
</div>
